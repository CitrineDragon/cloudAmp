<%- include('partials/header') -%>

<nav class="navbar navbar-expand-lg fixed-top navbar-dark">
  <div class="container-lg">
    <a class="navbar-brand text-info" href="/main">Cloud<span class="text-light">Amp</span></a>
    <button class="navbar-toggler shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon d-flex justify-content-center align-items-center"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarMenu">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link text-warning" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/signup">Signup</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<main class="first fullPage container-lg d-flex justify-content-center align-items-center">
  <div class="text-light border border-info rounded py-5 g-0 d-flex row justify-content-center align-items-center">
    <h2 class="mb-5 text-center text-light">Login To <span class="text-info">Cloud</span>Amp</h2>
    <section class="col-10 text-info">
      <% if (locals.messages.errors) { %>
      <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %>
      <% } %>
      <% if (locals.messages.info) { %>
      <% messages.info.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %>
      <% } %>

      <form action="/login" method="POST">
        <div class="mb-4">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" />
        </div>
        <div class="mb-4">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="password" />
        </div>
        <button type="submit" class="pill btn btn-outline-info">Submit</button>
      </form>
    </section>
  </div>
</main>
<%- include('partials/footer') -%>