</nav>
<section class="first text-center">
  <% if (locals.messages.errors) { %>
  <% messages.errors.forEach( el => { %>
  <div class="alert alert-danger"><%= el.msg %></div>
  <% }) %>
  <% } %>
  <% if (locals.messages.info) { %>
  <% messages.info.forEach( el => { %>
  <div class="alert alert-danger"><%= el.msg %></div>
  <% }) %>
  <% } %>
  <% if (locals.messages.success) { %>
  <% messages.success.forEach( el => { %>
  <div class="alert alert-success"><%= el.msg %></div>
  <% }) %>
  <% } %>
</section>

<main class="container-lg py-5 d-flex flex-column justify-content-center align-items-center">
  <div class="py-5 text-light border border-info rounded g-0 d-flex row justify-content-center align-items-center">
    <h2 class="mb-5 text-center text-light">Upload Music To <span class="text-info">Cloud</span>Amp</h2>
    <section class="col-10 text-info">
      <form action="/upload/createSong" enctype="multipart/form-data" method="POST" class="text-info">
        <div class="mb-4">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" />
        </div>
        <div class="mb-4">
          <label for="artist" class="form-label">Artist</label>
          <textarea class="form-control" id="artist" name="artist"></textarea>
        </div>
        <div class="mb-5">
          <label for="songUpload" class="form-label">Song</label>
          <input type="file" class="form-control" id="songUpload" name="file" />
        </div>
        <button type="submit" class="pill btn btn-outline-info" value="Upload">
          Submit
        </button>
      </form>
    </section>
  </div>
  <div class="py-3 text-center text-light">
    <p class="lead text-warning">Warning: Files must be smaller than 5 Megabytes.</p>
  </div>
</main>



<%- include('partials/footer') -%>